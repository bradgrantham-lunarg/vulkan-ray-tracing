FIND_PATH(GLFW_INCLUDE_DIR GLFW /opt/local/include /usr/include /usr/local/include ${CMAKE_CURRENT_SOURCE_DIR}/include)
# FIND_PATH(GLFW_INCLUDE_DIR_SPECIFIC GLFW /opt/local/include /usr/include /usr/local/include ${CMAKE_CURRENT_SOURCE_DIR}/include)
# get_filename_component(GLFW_INCLUDE_DIR ${GLFW_INCLUDE_DIR_SPECIFIC} DIRECTORY)

FIND_LIBRARY(GLFW_LIBRARIES NAMES glfw glfw3 glfw3dll PATHS /opt/local/lib /usr/lib /usr/local/lib ${CMAKE_CURRENT_SOURCE_DIR}/libs) 

IF (GLFW_INCLUDE_DIR AND GLFW_LIBRARIES)
  SET(GLFW_FOUND TRUE)
ENDIF (GLFW_INCLUDE_DIR AND GLFW_LIBRARIES)

IF (GLFW_FOUND)
   IF (NOT GLFW_FIND_QUIETLY)
       MESSAGE(STATUS "Found GLFW: ${GLFW_LIBRARIES}")
   ENDIF (NOT GLFW_FIND_QUIETLY)
ELSE (GLFW_FOUND)
   IF (GLFW_FIND_REQUIRED)
       MESSAGE(${GLFW_INCLUDE_DIR})
       MESSAGE(${GLFW_LIBRARIES})
       MESSAGE(FATAL_ERROR "Could not find GLFW")
   ENDIF (GLFW_FIND_REQUIRED)
ENDIF (GLFW_FOUND)
